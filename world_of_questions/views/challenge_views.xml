<?xml version="1.0"?>
<odoo>

  <record model='ir.ui.view' id='challenge_form'>
    <field name="name">challenge_form</field>
    <field name="model">challenge</field>
    <field name="arch" type="xml">
      <form string="Challenge" create="false" edit="false" delete="false">
        <div>
            <h2>
                <field name="message"/>
            </h2>
        </div>
        <field name="state" invisible="1"/>
        <group style="width:33%%">
          <button string="You guessed it!" style="width:33%%" name="solution_found" type="object" attrs="{'invisible': [('state', 'in', ('ready', 'not playing', 'new', 'done'))]}"/>
        </group>
        <br/>
        <button string="Yes" style="width:33%%" name="yes_action" type="object" class="btn-primary" attrs="{'invisible': [('state', '=', 'not playing')]}"/>
        <button string="No" style="width:33%%" name="no_action" type="object" class="btn-secondary" attrs="{'invisible': [('state', '=', 'not playing')]}"/>
        <button string="Ready to play" style="width:33%%" name="yes_action" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'not playing')]}"/>
        <br/><br/>
        <group>
          <button string="Start over" name="start_over" type="object" class="btn-link"/>
        </group>
      </form>
    </field>
  </record>

  <record model='ir.actions.act_window' id='action_play'>
    <field name="name">Play</field>
    <field name="res_model">challenge</field>
    <field name="view_mode">form</field>
    <field name="res_id" ref="world_of_questions.game_play"/>
  </record>

</odoo>